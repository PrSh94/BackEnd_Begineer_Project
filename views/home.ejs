<head>


    </head>
    <title>
        <%= title %>
    </title>
    <script src="https://kit.fontawesome.com/048bbd020c.js" crossorigin="anonymous"></script>
    <link rel="stylesheet" href="/css/home.css">
     </head>
    <body>
        <div id="page_heading">
            <h1>   <i class="fa-solid fa-phone"></i>   My Contact List    </h1>    
        </div>
        
        <div class="contactList">
            <ul>

                <% for ( let i of contact_list) { %>
                    
                    <li class="items">
                        <div class="details">
                            <p><%= i.name  %></p>
                            <i class="fa-regular fa-hand-point-right"></i>
                            <p><%= i.phone %></p>
                            <div class="delete-contact">
                                <!-- <a href="/delete_contact/?phone=<%= i.phone%>&name=<%= i.name%>"> -->
                                <a href="/delete_contact/?id=<%= i._id%>">

                                    <i class="fa-solid fa-user-xmark"></i>
                                </a>
                            </div>   
                        </div>  
                                       
                    </li>                                      
                    <%}%>

            </ul>
        </div>

         <div class="form">
            <form action="/create-contact" method="post">
                <input type="text" name="name" placeholder="Enter Name" required>
                <input type="text" name="phone" placeholder="Enter phone"" required>

                <button type="submit" id="button"> Create Contact</button>
            </form>
         </div>

            
        
    <script type="text/javascript" src="/js/home.js"></script>
    </body>


</html>